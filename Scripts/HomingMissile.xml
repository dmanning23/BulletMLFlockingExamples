<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="horizontal" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

	<action label="top">
		<fire>
			<bulletRef label="HomingMissile"/>
		</fire>
	</action>

	<bullet label="HomingMissile">
		<speed>2</speed>
		<action>
			<repeat>
				<times>9999</times>
				<action>
					<changeDirection>
						<direction type="aim">0</direction>
						<term>0</term>
					</changeDirection>
					<wait>1</wait>
				</action>
			</repeat>
		</action>
	</bullet>

</bulletml>
