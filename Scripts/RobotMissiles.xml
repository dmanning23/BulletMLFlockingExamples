<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="horizontal"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

	<action label="top">
		<repeat>
			<times>10</times>
			<action>
				<fire>
					<!--shoot over a 90 degree arc behind this dude-->
					<direction type="relative">225 - ($rand * 90)</direction>
					<bulletRef label="backBurst"/>
				</fire>
				<wait>4-$rank*2</wait>
			</action>
		</repeat>
		<wait>60</wait>
	</action>

	<bullet label="backBurst">
		<speed>5</speed>
		<action>
			<wait>30+$rand*20</wait>

			<changeSpeed>
				<speed type="relative">20</speed>
				<term>30</term>
			</changeSpeed>

			<repeat>
				<times>9999</times>
				<action>
					<changeDirection>
						<direction type="aim">0</direction>
						<term>0</term>
					</changeDirection>
					<wait>1</wait>
				</action>
			</repeat>

			<!--<wait>480 + ($rank * 120)</wait>-->
			<wait>120</wait>
			<vanish/>
		</action>
	</bullet>
</bulletml>
