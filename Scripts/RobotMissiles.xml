<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="horizontal"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

	<action label="top">
		<repeat>
			<times>10</times>
			<action>
				<fire>
					<!--shoot over a 90 degree arc behind this dude-->
					<direction type="relative">45 - ($rand * 120)</direction>
					<bulletRef label="backBurst"/>
				</fire>
				<!--<wait>4-$rank*2</wait>-->
				<wait>1</wait>
			</action>
		</repeat>
	</action>

	<bullet label="backBurst">
		<speed>10</speed>
		<action>
			<!--<wait>30+$rand*20</wait>-->
			<wait>15+$rand*20</wait>

			<changeSpeed>
				<speed type="relative">15</speed>
				<term>30</term>
			</changeSpeed>

			<repeat>
				<!--<wait>480 + ($rank * 120)</wait>-->
				<times>120</times>
				<action>
					<changeDirection>
						<direction type="aim">0</direction>
						<term>0</term>
					</changeDirection>
					<wait>1</wait>
				</action>
			</repeat>

			<vanish/>
		</action>
	</bullet>
</bulletml>
