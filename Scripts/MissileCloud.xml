<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

	<action label="top">
		<repeat>
			<times>2+$rank*7</times>
			<action>
				<fire>
					<direction type="sequence">360/(2+$rank*7-1)</direction>
					<bulletRef label="16way"/>
				</fire>
				<wait>100/(6+$rank*10)</wait>
			</action>
		</repeat>
		<wait>90</wait>
	</action>

	<bullet label="16way">
		<!--<speed>$rand*0.5+0.5</speed>-->
		<action>
			<wait>20</wait>
			<repeat>
				<times>16</times>
				<action>
					<fire>
						<direction type="sequence">22.5</direction>
						<bulletRef label="HomingMissile"/>
					</fire>
				</action>
			</repeat>
			<vanish/>
		</action>
	</bullet>

	<bullet label="HomingMissile">
		<speed>2</speed>
		<action>
			<wait>20</wait>
			<repeat>
				<times>9999</times>
				<action>
					<changeDirection>
						<direction type="aim">0</direction>
						<term>0</term>
					</changeDirection>
					<wait>1</wait>
				</action>
			</repeat>
		</action>
	</bullet>

</bulletml>
